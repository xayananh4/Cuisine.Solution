@{
  Layout = "_Layout";
}

@using CuisineTracker.Models;
@model List<CuisineTracker.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Restaurant restaurant in Model)
    {
      <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Description</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Back to cusines", "Index", "Cuisines")</p>
<p>@Html.ActionLink("Back Home", "Index", "Home")</p>
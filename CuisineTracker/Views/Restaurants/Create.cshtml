@{
  Layout = "_Layout";
}

@model CuisineTracker.Models.Restaurant

<h4>Add a new Restaurant</h4>
<p><strong>NOTE:</strong> You need to have at least one cuisine before you can add an restaurant!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Cuisine") to create a cuisine.</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")
  <br>
  <input type="submit" value="Add this new restaurant" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all restaurants", "Index")</p>